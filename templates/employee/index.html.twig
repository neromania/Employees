{% extends 'base.html.twig' %}

{% block title %}Employee index
{% endblock %}

{% block body %}
	<div class="container mt-4">
		<h1>Employee index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Id</th>
					<th>BirthDate</th>
					<th>FirstName</th>
					<th>LastName</th>
					<th>Gender</th>
					<th>Email</th>
					<th>Photo</th>
					<th>HireDate</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for employee in employees %}
					<tr>
						<td>{{ employee.id }}</td>
						<td>{{ employee.birthDate ? employee.birthDate|date('Y-m-d') : '' }}</td>
						<td>{{ employee.firstName }}</td>
						<td>{{ employee.lastName }}</td>
						<td>{{ employee.gender }}</td>
						<td>{{ employee.email }}</td>
						<td>{{ employee.photo }}</td>
						<td>{{ employee.hireDate ? employee.hireDate|date('Y-m-d') : '' }}</td>
						<td>
							<a href="{{ path('app_employee_show', {'id': employee.id}) }}">show</a>
							<a href="{{ path('app_employee_edit', {'id': employee.id}) }}">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="9">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_employee_new') }}">Create new</a>
		<div>
		{% endblock %}

